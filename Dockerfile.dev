FROM node:alpine AS builder

WORKDIR /app

COPY package*.json ./
COPY . .

RUN yarn global add next@latest
RUN yarn install

RUN yarn build

# Use multi-stage builds for smaller images
FROM node:alpine AS final

WORKDIR /app

COPY --from=builder /app/.next ./.next
COPY --from=builder /app/package*.json ./

EXPOSE 3000

CMD ["yarn", "run", "start"]
