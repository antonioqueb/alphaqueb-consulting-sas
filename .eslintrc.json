{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": ["error", "never"], // Deshabilita los semicolons
        "no-trailing-spaces": "off", // Ya lo tienes configurado
        "no-multi-spaces": "off", // Deshabilita multiples espacios
        "react/react-in-jsx-scope": "off", // Permite usar JSX sin importar React
        // Otras reglas que quieras deshabilitar
        "no-case-declarations": "off", // May be necessary in Next.js
        "no-multiple-empty-lines": "off",
        "react/prop-types": "off",  // If you're using TypeScript
        "comma-dangle": ["error", "only-multiline"] // More flexible comma usage
  }

    
}
